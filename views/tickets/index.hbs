<h1>All Tickets</h1>
<div class="row">
    {{#each tickets}}
        <div class="col s12 m4">
            <div class="card">
                <div class="card-image">
                    {{{editIcon _id}}}
                    
                </div>

                <div class="card-content center-align">
                    <h5>{{title}}</h5>
                    <p><b>Status:</b> <span style="text-transform:uppercase">{{status}}</span></p>
                    <p><b>Team:</b> <span style="text-transform:uppercase">{{team}}</span></p>
                    <p>{{stripBreakSpace (stripTags (truncate body 150))}}</p>
                    <br>
                    <div class="chip">
                        <img src="{{user.image}}" alt="">
                        <a href="/tickets/user/{{user._id}}">{{user.displayName}}</a>
                    </div>
                </div>

                <div class="card-action center-align">
                    <a href="/tickets/{{_id}}" class="btn grey">Read More</a>


                </div>

            </div>
        </div>

    {{else}}
        <p>No tickets to display</p>

    {{/each}}
</div>